---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Bring Your Own Website and APP",
    description:
      "Bring Your Own Website and APP: Seamlessly integrate your custom platforms into our ecosystem for enhanced functionality and user experience.",
    icon: "mdi:handshake",
  },
  {
    title: "100% Dynamic and 3D Animated Website And App ",
    description:
      "Experience immersive, dynamic, and fully 3D animated websites and apps that bring your digital presence to life.",
    icon: "mdi:feather",
  },
  {
    title: "On-Demand UI/UX ",
    description:
      "On-Demand UI/UX: Instant, tailored design solutions to enhance user experiences and interface aesthetics for web and mobile applications",
    icon: "mdi:directions-fork",
  },
  {
    title: "1 Year Website And App Managment",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any of your favorite npm packages.",
    icon: "mdi:graph",
  },
  {
    title: "SEO Enabled",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication.",
    icon: "mdi:search-web",
  },
  {
    title: "Community",
    description:
      "SATI WORLD is an open source project powered by hundreds of contributors making thousands of individual contributions.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    SATI WORLD : Your <span class="text-primary">website and app development solutions</span>. Elevate your <span class="text-primary">online</span>
    tools and adds its own <span class="text-primary">presence!</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
